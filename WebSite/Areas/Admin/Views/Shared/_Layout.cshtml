@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Администрация</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/spinners.css" rel="stylesheet" />
    <style>
        input[type=checkbox] {
            /* All browsers except webkit*/
            transform: scale(1.5);
            /* Webkit browsers*/
            -webkit-transform: scale(1.5);
        }
        .button-video-play
        {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -25px;
            margin-left: -25px;
            width:50px;
            height:50px;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Администрация", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Статии", "Index", "Articles")</li>
                        <li><a href="@Url.Action("Index", "Message")"> Съобщения @{if (ViewBag.Message != null && (int)ViewBag.Message > 0)
                            { @("Нови (") @ViewBag.Message; @(")") } }</a></li>
                        <li>@Html.ActionLink("Категории", "Index", "Category")</li>
                        <li>@Html.ActionLink("Галерия", "Index", "Gallery")</li>
                        <li class="pull-right"><a href="@Url.Action( "Logout", "Login")"> <i class="fa fa-sign-out"></i> Изход</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/assets/js/spinners.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script>
        $(document).ready(function () {
            $.ajaxSetup({ cache: false });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
