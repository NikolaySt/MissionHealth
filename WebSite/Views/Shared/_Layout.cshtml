@using System.Web.Optimization
<!DOCTYPE html>
<html lang="bg" xml:lang="bg" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        @if (string.IsNullOrWhiteSpace(ViewBag.Title))
        {
            ViewBag.Title = "Мисия Здраве";
            ViewBag.Descriptions = "Мисия Здраве е повече от блог. Това е начин на живот, защото най-ценно е нашето здраве. Моята мисия е да ви покажа, че да го постигнете, е лесно.";
        }
        @ViewBag.Title
    </title>
    <meta http-equiv="content-type" content="text/html" charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.Descriptions">
    <meta name="keywords" content="@ViewBag.Keywords">
    <meta name="author" content="Атанаска Дончева">
    @Html.Partial("_icons")
    @RenderSection("social", required: false)
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    @Styles.RenderFormat("<link href='" + UrlExtention.Cdn() + "{0}' rel='stylesheet' />", "~/content/css")
    @Styles.RenderFormat("<link href='" + UrlExtention.Cdn() + "{0}' rel='stylesheet' />", "~/content/css/fonts")
    @RenderSection("styles", required: false)
    @Styles.RenderFormat("<link href='" + UrlExtention.Cdn() + "{0}' rel='stylesheet' />", "~/content/css/custom")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.AntiForgeryToken()
    <div class="wrapper">
        @Html.Partial("_Header")
        @RenderBody()
        @Html.Partial("_Footer")
    </div>
    @Scripts.RenderFormat("<script src='" + UrlExtention.Cdn() + "{0}'></script>", "~/bundles/jquery")
    @Scripts.RenderFormat("<script src='" + UrlExtention.Cdn() + "{0}'></script>", "~/bundles/bootstrap")
    @Scripts.RenderFormat("<script src='" + UrlExtention.Cdn() + "{0}'></script>", "~/bundles/plugins")
    @if (!Request.IsLocalHost())
    {
        @Html.Partial("_facebookPixel")
        @Html.Partial("_googleTrace")
    }
    @RenderSection("scripts", required: false)
    <script type="text/javascript" async defer>
        $(document).ready(function () {
            App.init();
            $("a.scroll").on('click', function () {
                var hashTag = $(this).attr("href");
                $('html, body').animate({ scrollTop: $(hashTag).offset().top }, 500);
                return false;
            });
        });
    </script>
</body>
</html>